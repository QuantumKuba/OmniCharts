{
  "name": "night-vision",
  "version": "0.4.0",
  "description": "Highly customizable charting library, created for professional traders",
  "homepage": "https://github.com/project-nv/night-vision",
  "type": "module",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite --host",
    "build": "NODE_ENV=production vite build",
    "build:lib": "NODE_ENV=production BUILD_AS_LIB=true vite build && node ./types/build-script.cjs",
    "build-cdn": "vite build --config vite.cdn.config.js",
    "preview": "vite preview",
    "vercel-build": "NODE_ENV=production vite build"
  },
  "main": "./dist/night-vision.js",
  "module": "./dist/night-vision.js",
  "exports": {
    ".": {
      "import": "./dist/night-vision.js",
      "require": "./dist/night-vision.umd.cjs"
    }
  },
  "author": "ChartMaster",
  "license": "ISC",
  "dependencies": {
    "@freecodecamp/strip-comments": "^3.0.1",
    "arrayslicer": "^1.2.3",
    "d3": "^7.8.5",
    "hammerjs": "^2.0.8",
    "hamsterjs": "^1.1.3",
    "lodash": "^4.17.21",
    "lz-string": "^1.5.0",
    "moment": "^2.29.4",
    "pixi.js": "^7.3.2",
    "svelte": "^4.2.0"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^2.4.5",
    "vite": "^4.5.0",
    "vite-plugin-banner": "^0.7.1",
    "ws": "^8.14.2"
  }
}
